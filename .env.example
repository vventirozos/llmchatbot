# Ollama Configuration
DEFAULT_MODEL=granite4:tiny-h

# API Keys
TAVILY_API_KEY="your_tavily_api_key"

# Database
# Example: postgresql://user:password@localhost:5432/mydatabase
DATABASE_URL="your_database_url"

# System Prompt (Optional)
# The {datetime} placeholder will be replaced with the current date and time.
# SYSTEM_PROMPT="You are a helpful AI assistant. The current date is {datetime}."

# Workspace for tools
ALLOWED_WORK_DIR="./workspace"

# Conversation History Limits
MAX_CONVO_MESSAGES=20
MAX_CONVO_TOKENS=8000

# User Agent for web requests
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
